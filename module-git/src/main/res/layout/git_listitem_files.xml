<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/git_file_list_item_icon_size"
        android:layout_height="@dimen/git_file_list_item_icon_size"
        android:id="@+id/fileIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_file_special_24dp"
        android:padding="@dimen/git_file_list_item_icon_padding" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/git_default_text"
        android:id="@+id/fileTitle"
        android:layout_alignTop="@+id/fileIcon"
        android:layout_alignBottom="@+id/fileIcon"
        android:layout_toRightOf="@+id/fileIcon"
        android:layout_alignParentRight="true"
        android:padding="@dimen/git_general_padding"
        android:minHeight="@dimen/git_general_min_height"
        android:textSize="@dimen/git_file_list_item_text_size"
        android:gravity="left|center" />


</RelativeLayout>
